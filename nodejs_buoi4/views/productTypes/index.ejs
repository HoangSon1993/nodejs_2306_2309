<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Product Types</title>
</head>
<body>
    <div class="container">
        <h1 class="text-center"></h1>
        <a class="btn btn-primary" href="/product-types/create">Create Product Type</a>
        <table class="table table-light">
            <thead class="table-dark">
            <tr>
                <th>Mã số</th>
                <th>Tên loại sản phẩm</th>
                <th>Trạng thái</th>
                <th>Chức năng</th>
            </tr>
            </thead>
            <tbody>
                <% data.forEach(item =>{
                    %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.name %></td>
                        <td><%= item.status %></td>
                        <td>
                            <a class="btn btn-success" href="/product-types/detail/<%= item.id%>">Detail</a>
                            <a class="btn btn-warning" href="/product-types/edit/<%= item.id%>">Edit</a>
                            <a class="btn btn-danger" href="/product-types/delete/<%= item.id%>">Delete</a>
                        </td>
                    </tr>
                <%
                }) %>
            </tbody>
        </table>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>